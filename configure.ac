PKG_CHECK_MODULES([CURL], [libcurl],,
    [AC_MSG_ERROR([libcurl development files required])])
UTILITY_CFLAGS="${UTILITY_CFLAGS} ${CURL_CFLAGS}"
UTILITY_LIBS="${UTILITY_LIBS} ${CURL_LIBS}"

