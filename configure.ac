dnl BeOS-specific settings
if test x`$UNAME -s` = xBeOS ; then
  AC_DEFINE([SOCKET_ZERO_ISNT_STDIN], [1], [BeOS-specific setting])
  CFLAGS="$CFLAGS -Wno-multichar"
