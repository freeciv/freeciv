	   M /trunk/manual/civmanual.c
	   M /trunk/server/citytools.c
	   M /trunk/server/citytools.h
	   M /trunk/server/cityturn.c
	   M /trunk/server/gamehand.c
	   M /trunk/server/maphand.c
	   M /trunk/server/plrhand.c
