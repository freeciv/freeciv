	client/gui-sdl/menu.c, client/gui-sdl/menu.h,
	client/gui-sdl/messagedlg.c, client/gui-sdl/messagewin.c,
	client/gui-sdl/messagewin.h, client/gui-sdl/optiondlg.c,
	client/gui-sdl/optiondlg.h, client/gui-sdl/plrdlg.c,
	client/gui-sdl/plrdlg.h, client/gui-sdl/rc2c,
	client/gui-sdl/repodlgs.c, client/gui-sdl/repodlgs.h,
	client/gui-sdl/resources.c, client/gui-sdl/resources.h,
	client/gui-sdl/spaceshipdlg.c, client/gui-sdl/spaceshipdlg.h,
