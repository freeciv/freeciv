      "Tech",       "Tools",  "Player", FALSE
      "OutputType", "Shield", "Local",  TRUE
    }

[effect_irrigation]
type    = "Irrigation_Pct"
value   = 100
reqs    =
    { "type", "name", "range"
      "Extra", "Irrigation", "Local"
    }
